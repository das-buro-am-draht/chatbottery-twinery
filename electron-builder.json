{
	"directories": {"output": "dist/electron"},
	"forceCodeSigning": false,
	"linux": {
		"target": {
			"target": "zip",
			"arch": ["ia32", "x64"]
		}
	},
	"mac": {
		"darkModeSupport": true,
		"icon": "icons/app.icns",
		"target": "dmg"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true
	},
	"win": {
		"icon": "icons/app.ico",
		"target": {
			"target": "nsis",
			"arch": ["x64"]
		}
	}
}
